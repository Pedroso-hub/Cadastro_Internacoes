        android:layout_marginLeft="10dp"
        android:gravity="center"/>


    <TextView
        android:id="@+id/textViewMunicipio"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
